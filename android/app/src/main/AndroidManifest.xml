<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="orleans.info.fr.remotecontrol">
    <uses-sdk android:minSdkVersion="17"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/icone"
        android:theme="@style/AppTheme.NoActionBar" >
        <activity
            android:name="view.HomeActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="view.KeyboardActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name="view.BasicActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity
                android:name="view.CoActivity"
                  />
        <activity android:name="view.ProjoActivity"/>
        <service android:name="controller.communication.wifi.serviceTest.ConnectionService"/>
        <service android:name="controller.communication.wifi.TCPService" />
    </application>

</manifest>
