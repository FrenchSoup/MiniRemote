<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/VerticalLinearLayout">
    <android.gesture.GestureOverlayView
        style="@style/MatchParent"
        android:background="#000000"
        android:layout_weight="1"
        />
    <LinearLayout
        style="@style/HorizontalLinearLayout"
        android:layout_height="wrap_content">
        <ImageButton
            style="@style/WrapContent"
            android:layout_weight="1"
            android:src="?attr/gauche"
            android:onClick="gauche"/>
        <ImageButton
            style="@style/WrapContent"
            android:id="@+id/basic_keyboard_button"
            android:layout_weight="1"
            android:src="?attr/clavier"
            android:onClick="clavier"/>
        <ImageButton
            style="@style/WrapContent"
            android:layout_weight="1"
            android:src="?attr/droite"
            android:onClick="droite"/>
    </LinearLayout>
</LinearLayout>